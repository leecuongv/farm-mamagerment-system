    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "const responseJson = pm.response.json();",
                  "",
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response contains bearer token\", function () {",
                  "    pm.expect(responseJson).to.have.property(\"token\").that.is.a(\"string\").and.is.not.empty;",
                  "    pm.expect(responseJson).to.have.property(\"tokenType\", \"Bearer\");",
                  "});",
                  "",
                  "if (responseJson.token) {",
                  "    pm.environment.set(\"authToken\", responseJson.token);",
                  "}",
                  "if (responseJson.expiresAt) {",
                  "    pm.environment.set(\"authTokenExpiresAt\", responseJson.expiresAt);",
                  "}",
                  "if (responseJson.user && responseJson.user.id) {",
                  "    pm.environment.set(\"authenticatedUserId\", responseJson.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "Accept", "value": "application/json"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@farm.local\",\n  \"password\": \"admin123\"\n}"
            },
            "url": "{{baseUrl}}/auth/login"
          },
          "response": []
        },
